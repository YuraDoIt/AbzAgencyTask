            <tr>
               <th>N</th><th>Email</th><th>Name</th><th>Phone</th>
            </tr>
         
            <% for (var i = 0; i < quotation.length; i++) { %>
             <tr>
              <td><%= quotation[i].id %></td>
               <td><%= quotation[i].email %></td>
               <td><%= quotation[i].name %></td>
               <td><%= quotation[i].phone %></td>
             </tr>    
            <% } %>

         </table>
